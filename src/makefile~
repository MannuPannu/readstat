JCC = javac
JFLAGS = -g -d bin/

CFILEPATH = src/c-code/

GCC = g++
CFLAGS = -shared -fpic -o libReadStat.so -I/usr/java/include -I/usr/java/include/linux $(CFILEPATH)ReadStat.cpp 

# typing 'make' will invoke the first target entry in the makefile 

.SUFFIXES: .java .class


.java.class:
	$(JCC) $(JFLAGS) $*.java


CLASSES = \
	src/statistics/Statistics.java \
	src/statistics/ReadStat.java \
	src/statistics/Array.java \
	src/Main.java \

default: lib classes

lib: 
	$(GCC) $(CFLAGS)

classes: $(CLASSES:.java=.class)

# To start over from scratch, type 'make clean'.  
# Removes all .class files, so that the next make rebuilds them
#
clean: 
	$(RM) src/*.class src/statistics/*.class 
